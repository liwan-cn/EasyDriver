<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:layout_centerInParent="true"
        android:text="选  项"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="30sp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/heatMap_button"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:text="搭载点查询"
            android:textSize="22sp"
            android:background="@drawable/btn_selector"/>
        <Button
            android:id="@+id/carryCluster_button"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:text="上车点聚合"
            android:textSize="22sp"
            android:background="@drawable/btn_selector"/>
        <Button
            android:id="@+id/recommend_button"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:text="路线推荐"
            android:textSize="22sp"
            android:background="@drawable/btn_selector"/>
        <Button
            android:id="@+id/jam_button"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:text="路段拥堵查询"
            android:textSize="22sp"
            android:background="@drawable/btn_selector"/>

        <Button
            android:id="@+id/showtrail_button"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:text="出租车行驶轨迹"
            android:textSize="22sp"
            android:background="@drawable/btn_selector"/>
        <Button
            android:id="@+id/trailana_button"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="60dp"
            android:text="高收益司机轨迹分析"
            android:textSize="22sp"
            android:background="@drawable/btn_selector"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp">
        <Button
            android:id="@+id/setting_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/setting"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="  设  置"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/exit_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/exit"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:text="  退   出"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>
